{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++20",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/\\*.cpp",
                "${workspaceFolder}/src/libraries/\\*.cpp",
                "${workspaceFolder}/src/libraries/imgui/\\*.cpp",
                "${workspaceFolder}/src/libraries/glad.c",
                "${workspaceFolder}/include/glad/glad.h",

                "-lglfw3dll",
                "-o",
                "${workspaceFolder}/app.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}